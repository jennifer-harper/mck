
<div class="flex flex-col md:flex-row md:flex-wrap {% block bgColor %} {% endblock %}">
{% for entry in page %} 
    <a href="{{ entry.slug }}" class="w-full h-[100vw] md:w-[50vw] md:h-[50vw] lg:w-[25vw] lg:h-[25vw] relative group overflow-hidden">
       <div class="media-box">
        {% set image = entry.mainImage.one() %}
        {% if image and image.cloudflareCode %}
            <img src="https://imagedelivery.net/FfNXKd05SW9wypnlOimQoA/{{image.cloudflareCode}}/public" 
            class="group-hover:opacity-10 transition delay-150 duration-300 ease-in w-full"  
            loading="lazy" 
            alt="{{ image.alt|default('Placeholder') }}"
            >
        {% else %}
            <img src="{{image.getUrl()}}" 
                class="group-hover:opacity-10 transition delay-150 duration-300 ease-in w-full"  
                loading="lazy" 
                    alt="{{ image.alt | default('Placeholder') }}"
                >
        {% endif %}
        </div>
        <div class="w-full h-full absolute top-0 left-0 flex flex-col items-center justify-center">
            <h2 class="text-white text-lg font-bold opacity-0 group-hover:opacity-100 transition-opacity delay-150 duration-300 ease-in uppercase pt-[20px] px-[20px] lg:px-[4vw] lg:pt-[4vw]">
                {% if entry.title %}
                    {{entry.title}}
                {% endif %}
            </h2>
            <p class="text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-opacity delay-150 duration-300 ease-in uppercase  pb-[20px] px-[20px] lg:px-[4vw] lg:pb-[4vw]">                
                {% if entry.subtitle %}
                    {{entry.subtitle}}
                {% endif %}
            </p>
        </div>
    </a>
{% endfor %} 
</div>


